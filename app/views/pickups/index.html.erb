<h1 class="text-3xl font-bold mb-6">Available Pick-up Games</h1>

<% if @pickups.any? %>
  <ul class="space-y-4">
    <% @pickups.each do |pickup| %>
      <li class="flex items-center justify-between p-4 border border-gray-300 rounded-md shadow-sm">
        <%= link_to "#{pickup.name} - #{pickup.location}", pickup_path(pickup), class: "text-blue-600 hover:text-blue-800 font-medium" %>
        <%= link_to 'Join', pickup_path(pickup), class: 'inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500' %>
      </li>
    <% end %>
  </ul>
<% else %>
  <h1 class="text-2xl font-semibold text-gray-700 mt-6">Nothing</h1>
<% end %>
