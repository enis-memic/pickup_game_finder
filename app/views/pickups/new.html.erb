<h1 class="text-3xl font-bold mb-6">Create a New Pick-up Game</h1>
<%= form_with model: @pickup, url: pickups_path, class: "space-y-4" do |form| %>
  <!-- Form fields for creating a pick-up game -->
  <div class="field">
    <%= form.label :name, class: "block text-lg font-medium text-gray-700" %>
    <%= form.text_field :name, class: "mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500" %>
  </div>

  <div class="field">
    <%= form.label :location, class: "block text-lg font-medium text-gray-700" %>
    <%= form.text_field :location, class: "mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500" %>
  </div>

  <div class="field">
    <%= form.label :date, class: "block text-lg font-medium text-gray-700" %>
    <%= form.date_field :date, class: "mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500" %>
  </div>

  <div class="field">
    <%= form.label :time, class: "block text-lg font-medium text-gray-700" %>
    <%= form.time_field :time, class: "mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500" %>
  </div>

  <div class="field">
    <%= form.label :max_people, class: "block text-lg font-medium text-gray-700" %>
    <%= form.number_field :max_people, class: "mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500" %>
  </div>

  <div class="field">
    <%= form.label :min_people, class: "block text-lg font-medium text-gray-700" %>
    <%= form.number_field :min_people, class: "mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500" %>
  </div>

  <div class="field">
    <%= form.submit "Create Game", class: "mt-4 inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" %>
  </div>


<% end %>